<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/weather_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="200%"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_04"/>
        <TextView
            android:id="@+id/weather_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/weather_bg"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="NanJing"/>

        <RelativeLayout
            android:id="@+id/weather_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_bg"
            android:background="#1A4F83">
            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/partly_cloudy"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/weather_temp_cur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="70sp"
                    android:fontFamily="sans-serif-light"
                    android:includeFontPadding="true"
                    android:textColor="@android:color/white"
                    android:text="20\u00b0"/>

                <TextView
                    android:id="@+id/weather_degree_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@id/weather_temp_cur"
                    android:layout_alignTop="@id/weather_temp_cur"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/white"
                    android:text="\u219122\u00b0"/>

                <TextView
                    android:id="@+id/weather_temp_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@id/weather_temp_cur"
                    android:layout_alignBaseline="@id/weather_temp_cur"
                    android:layout_alignTop="@id/weather_temp_cur"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/white"
                    android:text="\u219310\u00b0"/>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>