<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A4F83">
        <ImageView
            android:id="@+id/weather_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="200%"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_04"/>
        <TextView
            android:id="@+id/weather_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/weather_bg"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="NanJing"/>

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/weather_bg"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@mipmap/partly_cloudy"/>

        <RelativeLayout
            android:id="@+id/temp_container"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/weather_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/weather_icon">
            <TextView
                android:id="@+id/current_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:gravity="center"
                android:text="14&#xb0;"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-thin"/>
            <TextView
                android:id="@+id/temp_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_alignRight="@+id/current_temp"
                android:layout_alignBottom="@+id/current_temp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="C"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-thin"/>
            <TextView
                android:id="@+id/current_high_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/current_temp"
                android:layout_toRightOf="@+id/current_temp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:padding="8dp"
                android:gravity="center"
                android:text="&#x2191;14&#xb0;"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-thin"/>
            <TextView
                android:id="@+id/current_low_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/current_temp"
                android:layout_toRightOf="@+id/current_temp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:padding="8dp"
                android:gravity="center"
                android:text="&#x2193;2&#xb0;"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-thin"/>
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>